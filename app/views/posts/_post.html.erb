<div class="mb-8 bg-white p-5 border border-black border-2 <%= 'mx-auto max-w-3xl' if single_post? %>">
  <div class="mb-4 flex">
    <h3 class="font-title cursor-pointer text-2xl font-bold basis-5/6">
      <%= link_to post.title, post_path(post.slug) %>
    </h3>
    <small class="flex-1 text-right basis-1/6"><%= post.published_at.strftime('%B %d, %Y') %></small>
  </div>

  <div class="mb-4">
    <%= single_post? ? post.content : post.content.to_plain_text.truncate(140) %>
  </div>

  <div class="flex">
    <div class="">
      <small>
        Spent: <%= number_to_currency(post.dollars) %> |
        Time: <%= post.hours %> hours
      </small>
    </div>

    <div class="flex-1 text-right">
      <% if current_user %>
        <%= link_to 'Edit this post', edit_post_path(post), class: 'underline' %>

        <% if single_post? %>
          | <%= link_to 'View all posts', root_path, class: 'underline' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
