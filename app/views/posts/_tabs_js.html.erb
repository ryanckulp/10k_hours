<script type="text/javascript">
  var projectTabs = document.getElementById('project_tabs');
  var projectUpdates = document.getElementById('project_updates');
  var projectStats = document.getElementById('project_stats');
  var projectBio = document.getElementById('project_bio');

  var activeTabClasses = ['border-indigo-500', 'text-indigo-600']; // TODO: make colors customizable

  function resetActiveTab() {
    Array.from(projectTabs.getElementsByTagName('button')).forEach(function(btn) {
      btn.classList.remove(...activeTabClasses);
    })
  }

  function showUpdates(el) {
    resetActiveTab();
    el.classList.add(...activeTabClasses);
    projectUpdates.classList.remove('hidden');

    hideBio();
    hideStats();
  }

  function showStats(el) {
    resetActiveTab();
    el.classList.add(...activeTabClasses);
    projectStats.classList.remove('hidden');

    hideUpdates();
    hideBio()
  }

  function showBio(el) {
    resetActiveTab();
    el.classList.add(...activeTabClasses);
    projectBio.classList.remove('hidden');

    hideStats();
    hideUpdates();
  }

  function hideUpdates() {
    projectUpdates.classList.add('hidden');
  }

  function hideStats() {
    projectStats.classList.add('hidden');
  }

  function hideBio() {
    projectBio.classList.add('hidden');
  }

</script>
